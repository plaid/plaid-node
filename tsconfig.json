{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es3",
    "module": "commonjs",
    "allowJs": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "preserveConstEnums": true,
    "outDir": "build",
    "lib": ["es6", "dom"],
    "alwaysStrict": true,
    "strictNullChecks": true
  },
  "include": [
    "index.d.ts"
  ]
}
