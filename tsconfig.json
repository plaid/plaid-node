{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "declaration": true,
    "preserveConstEnums": true,
    "lib": ["es6", "dom"],
    "alwaysStrict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true
  },
  "include": [
    "index.ts"
  ]
}
